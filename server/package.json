{
  "name": "meetingmind-server",
  "version": "1.5.0",
  "description": "MeetingMind Backend Server - AI-Powered Meeting Assistant with Manus 1.5 Enhancement",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t meetingmind-server .",
    "docker:run": "docker run -p 8000:8000 meetingmind-server"
  },
  "keywords": [
    "ai",
    "meeting",
    "assistant",
    "transcription",
    "analytics",
    "collaboration",
    "enterprise",
    "manus"
  ],
  "author": "MeetingMind Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "socket.io": "^4.7.4",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "express-winston": "^4.2.0",
    "node-cron": "^3.0.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "bull": "^4.12.0",
    "stripe": "^14.7.0",
    "paypal-rest-sdk": "^1.8.1",
    "openai": "^4.20.1",
    "anthropic": "^0.6.0",
    "@google-ai/generativelanguage": "^2.5.0",
    "google-auth-library": "^9.4.0",
    "ws": "^8.14.2",
    "express-fileupload": "^1.4.3",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "consistent-return": "off",
      "func-names": "off",
      "object-shorthand": "off",
      "no-process-exit": "off",
      "no-param-reassign": "off",
      "no-return-await": "off",
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kimhons/meetingmind-platform.git"
  },
  "bugs": {
    "url": "https://github.com/kimhons/meetingmind-platform/issues"
  },
  "homepage": "https://github.com/kimhons/meetingmind-platform#readme"
}
